<Application x:Class="CyberHeaven.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CyberHeaven"
             xmlns:converters="clr-namespace:CyberHeaven.Converters" xmlns:services="clr-namespace:CyberHeaven.Services"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Strings.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Пример использования конвертера -->
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:NullToTextConverter x:Key="NullToTextConverter"/>
            <converters:ThemeToIconConverter x:Key="ThemeToIconConverter"/>
            <Cursor x:Key="DefaultCursor">D:\ООП\CyberHeaven\CyberHeaven\images\DefaultCursor.ani</Cursor>
            <Cursor x:Key="PointerCursor">D:\ООП\CyberHeaven\CyberHeaven\images\PointerCursor.ani</Cursor>
        </ResourceDictionary>

    </Application.Resources>
</Application>
